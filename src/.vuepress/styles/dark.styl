$main = #292929
$text = #ededed
$ease = rgba(255, 255, 255, 0.08)
$border = lighten($main, 10)

.is-dark
  body
    color $text
    background darken($main, 5)

  .homepage
    section:first-child
      background-image url('/assets/home-bg-dark.jpg')
      background-color transparent

  .navbar
    background $main

    .links
      .dropdown-title
        color $text

      .nav
        &-dropdown
          background lighten($main, 5)

          .dropdown-item h4
            border-color $border
        
        &-link
          color $text

    .site-name
      color $text

    .search-box input
      background-color $ease
      color $textColorDark

  .sidebar
    background darken($main, 3)
    border-color transparent

    &-link,
    .mobile-dropdown-title
      color $text
  
  .custom-block
    &.tip
      background $ease
    
    &.warning
      color gold

      .custom-block-title
        color yellow
  
  table
    th,
    td
      border-color lighten($main, 5)

    tr:nth-child(2n)
      background $ease

  h2
    border-color $border

  code
    color $text
    background-color $ease
  
  .page-nav .inner
    border-color $border
  
  .page-edit
    .last-updated
      .prefix
        color $text
      .time
        color darken($text, 20%)

  .content__default > footer
    border-color $border
    color $textColorDark
  
  kbd
    background-color $codeBgColor
    border-color $borderColorDark
    color $textColorDark
